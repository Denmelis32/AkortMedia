# ===========================================
# YANDEX CLOUD CONFIGURATION
# ===========================================

# Yandex Database (YDB)
YDB_ENDPOINT=grpcs://ydb.serverless.yandexcloud.net:2135
YDB_DATABASE=/ru-central1/b1gt6fjmjnejpscls6e8/etng2uemrr7ivj80tldm

# Service Account Credentials
YC_SERVICE_ACCOUNT_KEY_FILE=authorized_key.json

# Object Storage
YANDEX_CLOUD_BUCKET=news-app-media-123
YANDEX_CLOUD_REGION=ru-central1
YANDEX_CLOUD_ENDPOINT=https://storage.yandexcloud.net

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# Server Port
PORT=3000

# JWT Secret Key (ЗАМЕНИТЕ НА РЕАЛЬНЫЙ СЕКРЕТ В ПРОДАКШЕНЕ)
JWT_SECRET=your-super-secret-jwt-key-for-production-change-this-in-production

# Environment
NODE_ENV=production

# ===========================================
# DATABASE CONFIGURATION (LEGACY - ДЛЯ МИГРАЦИИ)
# ===========================================

# PostgreSQL (если нужно для миграции данных)
DATABASE_URL=postgresql://username:password@localhost:5432/news_app

# ===========================================
# APPLICATION SETTINGS
# ===========================================

# CORS Settings
CORS_ORIGIN=*

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Security
BCRYPT_ROUNDS=12
TOKEN_EXPIRES_IN=7d

# ===========================================
# CLOUD FUNCTIONS SPECIFIC
# ===========================================

# Cloud Functions Timeout (seconds)
FUNCTION_TIMEOUT=30

# Memory Size (MB)
FUNCTION_MEMORY=128

# ===========================================
# EXTERNAL SERVICES (ЕСЛИ БУДУТ НУЖНЫ)
# ===========================================

# Email Service (например, для уведомлений)
SMTP_HOST=smtp.yandex.ru
SMTP_PORT=587
SMTP_USER=your-email@yandex.ru
SMTP_PASS=your-email-password

# Analytics (например, Яндекс Метрика)
YANDEX_METRICA_ID=your-metrica-id

# Push Notifications
FCM_SERVER_KEY=your-fcm-server-key